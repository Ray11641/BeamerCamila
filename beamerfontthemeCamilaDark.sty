\mode<presentation>


% Title page
\setbeamerfont{title}{
    size=\LARGE,
    shape=\bfseries
}

\setbeamerfont{subtitle}{
    size=\large,
    shape=\normalfont
}

\setbeamerfont{author}{
    size=\normalsize,
    shape=\normalfont
}

\setbeamerfont{details}{
    size=\footnotesize,
    shape=\normalfont
}

% Slide title
\setbeamerfont{frametitle}{size=\LARGE}
\setbeamerfont{framesubtitle}{
    size=\normalsize,
    shape=\normalfont\scshape
}

% Blocks
\setbeamerfont{block title}{
    size=\normalfont,
    shape=\strut
}

\setbeamerfont{blockdef}{
    size=\large,
    shape=\bfseries
}

% Description
\setbeamerfont{description item}{shape=\bfseries}

\mode<all>
